<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:onClick="twoScrV"
            android:text="两个竖直方向排放的ScrollView" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:onClick="threeScrV"
            android:text="三个竖直方向排放的ScrollView" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:onClick="twoScrH"
            android:text="两个水平方向排放的HorizontalScrollView" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:onClick="threeScrH"
            android:text="三个水平方向排放的HorizontalScrollView" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:onClick="setSelectionItem"
            android:text="调用setSelectionItem跳转到指定页面" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:onClick="listenerTest"
            android:text="进入页面监听和滚动监听" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:onClick="withViewPager"
            android:text="组合ViewPager一起使用" />

    </LinearLayout>
</ScrollView>
