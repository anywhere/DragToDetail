<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.workdawn.dragtodetaillayout">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".test.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".test.TwoScrollView_V" />
        <activity android:name=".test.ThreeScroll_V" />
        <activity android:name=".test.TwoScroll_H" />
        <activity android:name=".test.ThreeScroll_H" />
        <activity
            android:name=".test.SelectItemActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".test.DragListenerActivity" />
        <activity android:name=".test.ScrollViewAndViewPager" />
        <activity android:name=".test.ScrollViewWebView" />
    </application>

</manifest>
